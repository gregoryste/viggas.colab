<!DOCTYPE html>
<html lang="PT-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Viggas</title>
    <link rel="stylesheet" href="/dist/css/global.css">
    <link rel="stylesheet" href="/dist/css/login.css">
</head>
<body>
    <main role="main" class="main-content">

        {% if response.size != 0 %}
            {% include "elements/toast"  %}
        {% endif %}

        <div class="login__container">
            <div class="login__content">
                <h1 class="login__title">Viggas</h1>
                <h2 class="login__subtitle">Co.Lab</h2>

                <form action="/login" method="POST" class="login__form">
                    <div class="login__form-item">
                        <label for="email" class="login__form-label">UID:</label>
                        <input type="text" id="uid" name="uid" value="{{ fields.uid }}" class="login__form-input js-input-uid">
                    </div>
                    <div class="login__form-item" style="display: none;">
                        <label for="email" class="login__form-label">E-mail:</label>
                        <input type="email" id="email" name="email" value="{{ fields.email }}" class="login__form-input js-input-email">
                    </div>
                    <div class="login__form-item" style="display: none;">
                        <label for="password" class="login__form-label">Senha:</label>
                        <input type="password" name="password" id="password" class="login__form-input js-input-passowrd">
                        <i class="fa-solid fa-eye login__form-icon js-eye"></i>
                        <i class="fa-solid fa-eye-slash login__form-icon js-eye-invisible"></i>
                    </div>

                    <button type="submit" class="login__form-submit">Entrar</button>
                </form>
            </div>
        </div>
    </main>
    <!-- JS Intern -->
    <script type="module" src="js/login.js"></script>
    <script type="module" src="js/showMessageError.js"></script>
    <script src="js/plugins/fontawesome.js"></script>
</body>
</html>